generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String?
  password String?
  name     String?
}

model Lyric {
  id              Int      @id @default(autoincrement())
  text            String
  is_reaction     Boolean?
  paragraph_count Int?
  word_count      Int?
  hashtag_count   Int?
  hashtags        Int[]
  userId          Int
}

model Hashtag {
  id      Int    @id @default(autoincrement())
  text    String @unique
  userId  Int
  lyricId Int
}
