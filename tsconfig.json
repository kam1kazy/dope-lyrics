{
  "compileOptions": {
    "paths": {
      // SERVER
      "@server/*": ["./server/src/*"],
      "@prisma/*": ["./server/prisma/*"],
      "@graphql/*": ["./server/src/graphql/*"],
      "@bot/*": ["./server/src/bot/*"],
      "@type/*": ["./server/src/type/*"],
      // CLIENT
      "@client/*": ["./client/src/*"],
      "@components/*": ["../client/src/components/*"],
      "@app/*": ["./app/*"]
    }
  }
}
